<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/playerA"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nameA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/player1"
                    android:fontFamily="courier"
                    android:gravity="center"
                    android:text="Myself"
                    android:textColor="@color/textPrimary"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/deckA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/player1"
                    android:fontFamily="courier"
                    android:gravity="center"
                    android:text="deck"
                    android:textColor="@color/textPrimary"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/playerALife"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/player1"
                    android:fontFamily="courier"
                    android:gravity="center"
                    android:text="8000"
                    android:textColor="@color/textPrimary"
                    android:textSize="50sp"
                    android:textStyle="bold" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/playerB"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nameB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/player2"
                    android:fontFamily="courier"
                    android:gravity="center"
                    android:text="Opponent"
                    android:textColor="@color/textPrimary"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/deckB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/player2"
                    android:fontFamily="courier"
                    android:gravity="center"
                    android:text="deck"
                    android:textColor="@color/textPrimary"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/playerBLife"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/player2"
                    android:fontFamily="courier"
                    android:gravity="center"
                    android:text="8000"
                    android:textColor="@color/textPrimary"
                    android:textSize="50sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/plusMinusToggle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_weight="4"
                android:background="@color/buttonCalculator"
                android:drawableTop="@drawable/minus"
                android:text="" />

            <TextView
                android:id="@+id/preCalculation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:background="@color/preCalculatorRed"
                android:fontFamily="courier"
                android:gravity="center"
                android:text="0000"
                android:textColor="@color/textPrimary"
                android:textSize="43sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/undo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_weight="2"
                android:background="@color/buttonCalculator"
                android:drawableTop="@drawable/undo"
                android:text="" />

            <Button
                android:id="@+id/log"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_weight="2"
                android:background="@color/buttonCalculator"
                android:drawableTop="@drawable/log"
                android:text="" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">


            <Button
                android:id="@+id/one"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:background="@color/buttonCalculator"
                android:fontFamily="courier"
                android:gravity="center"
                android:text="1"
                android:textSize="70sp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/two"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:background="@color/buttonCalculator"
                android:fontFamily="courier"
                android:gravity="center"
                android:text="2"
                android:textSize="70sp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/three"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:background="@color/buttonCalculator"
                android:fontFamily="courier"
                android:gravity="center"
                android:text="3"
                android:textSize="70sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">


            <Button
                android:id="@+id/four"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:background="@color/buttonCalculator"
                android:fontFamily="courier"
                android:gravity="center"
                android:text="4"
                android:textSize="70sp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/five"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:background="@color/buttonCalculator"
                android:fontFamily="courier"
                android:gravity="center"
                android:text="5"
                android:textSize="70sp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/six"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:background="@color/buttonCalculator"
                android:fontFamily="courier"
                android:gravity="center"
                android:text="6"
                android:textSize="70sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">


            <Button
                android:id="@+id/seven"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:background="@color/buttonCalculator"
                android:fontFamily="courier"
                android:gravity="center"
                android:text="7"
                android:textSize="70sp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/eight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:background="@color/buttonCalculator"
                android:fontFamily="courier"
                android:gravity="center"
                android:text="8"
                android:textSize="70sp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/nine"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:background="@color/buttonCalculator"
                android:fontFamily="courier"
                android:gravity="center"
                android:text="9"
                android:textSize="70sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">


            <Button
                android:id="@+id/half"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/buttonCalculator"
                android:fontFamily="courier"
                android:gravity="center"
                android:text="1/2"
                android:textSize="35sp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/zero"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:background="@color/buttonCalculator"
                android:fontFamily="courier"
                android:gravity="center"
                android:text="0"
                android:textSize="70sp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/quit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/buttonCalculator"
                android:fontFamily="courier"
                android:gravity="center"
                android:text="QUIT"
                android:textSize="35sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>


</layout>