<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:text">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="LogAlert" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="colorAccent">#263238</item>
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">#deddf9</item>
    </style>

    <style name="NormalAlert" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColorPrimary">#000000</item>
    </style>

</resources>
